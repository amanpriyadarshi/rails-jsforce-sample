<!DOCTYPE html>
<html>
  <head>
    <title><%= get_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <style>pre code { background: transparent; }</style>
    <!-- library -->
    <%= yield :library %>
  </head>
  <body>
    <!-- header -->
    <%= render 'header' %>
    <!-- containt -->
    <div style="min-height: 520px;">
      <%= yield %>
    </div>
    <!-- footer -->
    <%= render 'footer' %>
    <!-- add javascript -->
    <%= yield :scripts %>
    <!-- JSforce -->
    <script type="text/javascript">
      $(document).ready(function(){
        jsforce.browser.init({
          clientId: '3MVG9ZL0ppGP5UrBNnfv8GHjLw9ac.CX_Zko26PdUO6DZ_2Nd5YNn8Xg57RSDAXyYr3XBylQAesapT_1JtWdR',
          redirectUri: 'http://localhost:3000/connect'
        });
      });
    </script>
  </body>
</html>
