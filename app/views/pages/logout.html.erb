<% provide(:title, 'Logout') %>

<div class="query-page">
  <!-- main -->
  <div id="sb-site" class="main-color">
    <%= render 'menu_header' %>

    <div class="container">
      <div style="margin-bottom: 20px;">
        <h1 class="header-line">Salesforce Connection Logout</h1>
        <button type="button" class="btn btn-primary" onclick="return logout();">Logout</button>
      </div>
    </div>
  </div>
  <!-- sidebar -->
  <%= render 'sidebar' %>
</div>

<% content_for :scripts do %>
<script type="text/javascript">

  var conn = null;

  $(document).ready(function(){
    // Slidebar
    $.slidebars();

    jsforce.browser.on('connect', function(c) {
      conn = c;
    });
  });

  function logout() {
    if(confirm('Logout ?')) {
      jsforce.browser.logout();
      location.href = "https://tyoshikwa1106-jsforce-sample.herokuapp.com";
    }

    return false;
  }
</script>
<% end %>