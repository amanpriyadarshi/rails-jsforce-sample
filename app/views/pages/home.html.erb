<div class="home-page">
  <!-- main -->
  <div id="sb-site" class="main-color">
    <%= render 'menu_header' %>
    <div class="container">
      <h1>
        Hello! <span data-bind="text: userName"></span>
      </h1>
    </div>
  </div>
