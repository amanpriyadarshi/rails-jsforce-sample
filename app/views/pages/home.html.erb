<% content_for :library do %>
  <!-- your library -->
<% end %>

<div class="home-page">
  <!-- main -->
  <div id="sb-site" style="background-color: #f0f1f2;">
    <%= render 'menu_header' %>
    <div class="container">
      <h1>
        Hello! <span data-bind="text: userName"></span>
      </h1>
    </div>
  </div>
  <!-- sidebar -->
  <%= render 'sidebar' %>
</div>

<% content_for :scripts do %>
<script type="text/javascript">
  (function($) {
    $(document).ready(function(){
      // Slidebar
      $.slidebars();

      // Get User
      jsforce.browser.on('connect', function(conn) {
        var query = 'SELECT Id, Name FROM User WHERE Id = ' + '\'' + conn.userInfo.id + '\'' + ' LIMIT 1';
        conn.query(query, function(err, res) {
          if (err) {
            return console.error(err);
          }
          
          var homeViewModel = {
            userName: res.records[0].Name + '!!'
          };

          ko.applyBindings(homeViewModel);
        });
      });
    });
  }) (jQuery);
</script>
<% end %>